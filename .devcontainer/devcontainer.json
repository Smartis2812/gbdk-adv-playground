{
  "name": "GBDK-2020",
  "image": "mcr.microsoft.com/vscode/devcontainers/cpp",
  "postCreateCommand": "curl -L https://github.com/gbdk-2020/gbdk-2020/releases/download/latest/gbdk-linux64.tar.gz | tar -xvzf && echo 'export PATH=$PATH:$PWD/gbdk' >> ~/.bashrc",
  "remoteEnv": {
    "GBDKDIR": "${localWorkspaceFolder}/gbdk-2020"
  },
  "features": {
    "ghcr.io/jungaretti/features/make:1": {}
  }
}
